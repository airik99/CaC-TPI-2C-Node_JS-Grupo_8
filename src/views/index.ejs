<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | Funkoshop</title>
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
    <%- include('partials/header') %>
        <section class="hero">
            <article class="hero__content container">
                <h3 class="hero__title">Nuevos ingresos</h3>
                <p class="hero__text"><%= hero_text %></p>
                <a class="hero__link" href="./pages/shop/shop.html">SHOP</a>
            </article>
        </section>
        <% for (let i=0; i < principalProducts.length; i++) { const product=principalProducts[i]; %>
            <section class="collection container">
                <article class="collection__content">
                    <% if (product.product_name=="Baby Yoda") { %>
                        <h3 class="collection__title"><%= star_wars_title %></h3>
                        <p class="collection__text"><%= star_wars_description %></p>
                        <% } else if (product.product_name=="Vulpix") { %>
                            <h3 class="collection__title"><%= pokemon_title %></h3>
                            <p class="collection__text"><%= pokemon_description %></p>
                            <% } else if (product.product_name=="Snape Patronus") { %>
                                <h3 class="collection__title"><%= harry_potter_title %></h3>
                                <p class="collection__text"><%= harry_potter_description %></p>
                                <% } %>
                                    <a class="collection__link" href="./pages/shop/shop">VER COLECCION</a>
                </article>
                <picture class="collection__cover">
                    <img src="<%= product.img_front %>" alt="<%= product.product_name %>">
                </picture>
            </section>
            <% } %>
                <section class="slider container glide">
                    <h2 class="slider__title">ÚLTIMOS LANZAMIENTOS</h2>
                    <div class="glide__track" data-glide-el="track">
                        <ul class="slider__items glide__slides">
                            <% latestReleases.forEach((product)=> { %>
                                <li class="slider__item glide__slide">
                                    <article class="card-item">
                                        <a class="card-item__link" href="<%= product.link %>">
                                            <picture class="card-item__cover">
                                                <span class="card-item__tag">NUEVO</span>
                                                <img class="card-item__img--front" src="<%= product.img_front %>" alt="<%= product.product_name %>">
                                                <img class="card-item__img--back" src="<%= product.img_back %>" alt="<%= product.product_name %> en caja">
                                            </picture>
                                            <div class="card-item__content">
                                                <p class="card-item__licence"> <%= product.licence_name %></p>
                                                <h4 class="card-item__name"><%= product.product_name %></h4>
                                                <p class="card-item__price">$ <%= product.product_price %>.-</p>
                                                <p class="card-item__promo"><%= product.dues %> CUOTAS SIN INTERÉS</p>
                                            </div>
                                        </a>
                                    </article>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <div class="glide__arrows" data-glide-el="controls">
                        <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="tabler:chevron-left"></iconify-icon></button>
                        <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="tabler:chevron-right"></iconify-icon></button>
                    </div>
                </section>
                </main>
                <%- include('partials/footer') %>
                    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
                    <script src="/public/js/glide.js"></script>
</body>
</html>